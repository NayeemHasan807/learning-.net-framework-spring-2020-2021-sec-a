@*@@Model MyWebApplication.Models.Person;*@
@Model IEnumerable<MyWebApplication.Models.Person>

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Person</title>
    </head>
    <body>
        <!--<div>
            <h1>Hi</h1>
            <h2>@@Model.Name</h2>
