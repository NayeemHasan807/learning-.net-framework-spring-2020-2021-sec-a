        </div>
        -->
        <div>
            <table border="1">
                <tr>
                    <th> Name </th>
                    <th>Salary</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Name</td>
                        <td> @item.Salary</td>
                    </tr>
                }
            </table>
        </div>
    </body>
</html>
